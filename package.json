{
  "name": "sugar-client",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "build": "browserify --extension .coffee --transform coffeeify --transform [uglifyify --exts .js --exts .coffee] --entry index.coffee --outfile index.js",
    "watch": "watchify --verbose --extension .coffee --transform coffeeify --entry index.coffee --outfile index.js",
    "start": "npm run watch"
  },
  "devDependencies": {
    "browserify": "~8.1.3",
    "watchify": "~3.2.3",
    "coffee-script": "~1.9.3",
    "coffeeify": "~1.1.0",
    "uglifyify": "~3.0.1",
    "git-pre-hooks": "~1.1.1",
    "mocha": "~2.2.5",
    "chai": "~2.3.0",
    "chai-spies": "~0.5.1"
  },
  "git-pre-hooks": {
    "pre-commit": "npm run build",
    "pre-push": "npm test"
  }
}
